{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist/"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/tests/**/*"]
}
